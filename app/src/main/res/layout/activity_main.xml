<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#C59595"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="566dp"
        android:layout_height="991dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="352dp"
        android:layout_height="196dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:background="#00DDC6C6"
        android:backgroundTint="#FBF6F6"
        android:foregroundTint="#C33535"
        android:text="PlanificaciÃ³n Round Robin"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#EFEFEF"
        app:autoSizeTextType="uniform"
        app:drawableTint="#FFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnContinue"
        android:layout_width="154dp"
        android:layout_height="115dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#005A1851"
        android:scaleType="centerCrop"
        android:tag="Continuar"
        app:tint="#7C000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome"
        app:srcCompat="@android:drawable/ic_menu_send" />

</androidx.constraintlayout.widget.ConstraintLayout>